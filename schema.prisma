// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// USER MANAGEMENT
// ============================================================================

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Hash bcrypt
  name      String
  role      UserRole @default(COMMERCIAL)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  prospects          Prospect[]
  scrapingJobs       ScrapingJob[]
  importJobs         ImportJob[]
  commercialActivities CommercialActivity[]

  @@map("users")
}

enum UserRole {
  ADMIN
  COMMERCIAL
}

// ============================================================================
// PROSPECTS & CRM CORE
// ============================================================================

model Prospect {
  id           String   @id @default(cuid())

  // Informations de base
  companyName  String
  fullName     String?
  email        String?
  phone        String?
  address      String?
  city         String?
  postalCode   String?
  website      String?

  // États commerciaux (workflow 8-phases)
  status       ProspectStatus @default(PREMIER_APPEL)
  assignedTo   String?        // User ID
  assignedUser User?          @relation(fields: [assignedTo], references: [id])

  // Dates importantes
  nextCallDate     DateTime?
  lastContactDate  DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // ============================================================================
  // FILTRAGE BINAIRE WEB QUALITY (Architecture simplifiée)
  // ============================================================================

  hasWebsiteIssue      Boolean   @default(false)
  websiteIssueReason   String?   // "404", "Redirection FB", "Non-responsive", "Technologies obsolètes"
  lastWebsiteCheck     DateTime?

  // Relations
  notes                Note[]
  commercialActivities CommercialActivity[]

  // Index pour performance
  @@index([status])
  @@index([assignedTo])
  @@index([hasWebsiteIssue])
  @@index([city])
  @@index([nextCallDate])
  @@map("prospects")
}

enum ProspectStatus {
  PREMIER_APPEL
  A_RAPPELER
  RDV_MAQUETTE_PRIS
  RDV_MAQUETTE_FAIT
  DEVIS_ENVOYE
  SIGNATURE_PROCHE
  SIGNE
  PERDU
}

// ============================================================================
// NOTES & COMMUNICATIONS
// ============================================================================

model Note {
  id         String   @id @default(cuid())
  content    String
  prospectId String
  prospect   Prospect @relation(fields: [prospectId], references: [id], onDelete: Cascade)
  createdBy  String   // User ID
  createdAt  DateTime @default(now())

  @@map("notes")
}

// ============================================================================
// SCRAPING & IMPORT JOBS
// ============================================================================

model ScrapingJob {
  id          String        @id @default(cuid())
  status      ScrapingStatus @default(PENDING)
  metier      String        // "plombier", "électricien", etc.
  villes      String[]      // ["Paris", "Lyon", etc.]
  maxProspects Int          @default(100)

  // Résultats
  totalScraped Int          @default(0)
  withIssues   Int          @default(0)  // Prospects gardés (avec problèmes web)
  imported     Int          @default(0)
  rejectedCount Int         @default(0)  // Sites corrects supprimés

  // Metadata
  startedAt    DateTime     @default(now())
  completedAt  DateTime?
  errorMessage String?
  userId       String
  user         User         @relation(fields: [userId], references: [id])

  @@map("scraping_jobs")
}

enum ScrapingStatus {
  PENDING
  SCRAPING
  VALIDATING
  FILTERING
  IMPORTING
  COMPLETED
  FAILED
}

model ImportJob {
  id          String      @id @default(cuid())
  filename    String
  status      ImportStatus @default(PENDING)

  // Résultats
  totalRows   Int         @default(0)
  imported    Int         @default(0)
  duplicates  Int         @default(0)
  errors      String[]    @default([])

  // Metadata
  startedAt   DateTime    @default(now())
  completedAt DateTime?
  userId      String
  user        User        @relation(fields: [userId], references: [id])

  @@map("import_jobs")
}

enum ImportStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

// ============================================================================
// COMMERCIAL WORKFLOW & ACTIVITIES
// ============================================================================

model CommercialActivity {
  id         String           @id @default(cuid())
  prospectId String
  prospect   Prospect         @relation(fields: [prospectId], references: [id], onDelete: Cascade)
  action     CommercialAction

  // États de transition
  fromStatus ProspectStatus?
  toStatus   ProspectStatus?

  // Données activité
  notes      String?
  duration   Int?             // en minutes pour appels

  // Metadata
  createdAt  DateTime        @default(now())
  userId     String
  user       User            @relation(fields: [userId], references: [id])

  @@map("commercial_activities")
}

enum CommercialAction {
  CALL_MADE
  STATUS_UPDATE
  NOTE_ADDED
  EMAIL_SENT
  RDV_SCHEDULED
  WEBSITE_VALIDATED
}